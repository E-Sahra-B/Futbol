@model List<Player>
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <form class="forms-sample" style="padding: 50px; background-color: black; " method="post">
        <div class="form-group row">
            <div class="col-sm-12">
                <input type="text" class="form-control" id="exampleInputUsername2" name="TeamId" placeholder="Takım Id">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <input type="text" class="form-control" id="exampleInputUsername2" name="FirstName" placeholder="FirstName">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <input type="text" class="form-control" id="exampleInputUsername2" name="LastName" placeholder="LastName">
            </div>
        </div>
        <button type="submit" class="btn btn-outline-success" >Futbolcu Ekle</button>
    </form>
    
    <table class="table table-bordered">
        <tr>
            <th>Fulbolcu Id</th>
            <th>Takım Id</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Detaylar</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PlayerId</td>
                <td>@item.TeamId</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td><a href="#" class="btn btn-warning">Detaylar</a></td>
                <td><a href="/Player/Delete/@item.PlayerId" class="btn btn-danger">Sil</a></td>

            </tr>
        }
    </table>
</div>

